<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.9" client="site" method="upgrade">
	<name>mod_rjcweather</name>
	<author>{ron4mac}</author>
	<creationDate>June 2021</creationDate>
	<copyright>Copyright (C) 2021 RJCreations. All rights reserved.</copyright>
